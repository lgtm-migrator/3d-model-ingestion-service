{
  "name": "3d-model-ingestion-service",
  "version": "2.0.0",
  "description": "A restful API for creating a new 3d model ingestion flow",
  "main": "./src/index.ts",
  "scripts": {
    "test:unit": "jest --config=./tests/configurations/unit/jest.config.ts",
    "test:integration": "jest --config=./tests/configurations/integration/jest.config.ts",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "prelint:fix": "npm run format:fix",
    "prelint": "npm run format",
    "lint:openapi": "openapi lint ./openapi3.yaml",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "release": "standard-version",
    "test": "npm run test:unit && npm run test:integration",
    "prebuild": "npm run clean",
    "build": "tsc --project tsconfig.build.json && npm run assets:copy",
    "start:ts": "ts-node ./src/index.ts",
    "start": "npm run build && cd dist && node ./index.js",
    "assets:copy": "copyfiles -f ./config/* ./dist/config && copyfiles -f ./bundledApi.yaml ./dist/ && copyfiles ./package.json dist",
    "clean": "rimraf dist",
    "copySchema": "copyfiles -u 5 \"./node_modules/@map-colonies/mc-model-types/Schema/yaml/**/*\" ./Schema",
    "prebundleOpenApi": "npm run copySchema",
    "bundleOpenApi": "openapi bundle --output ./bundledApi.yaml --ext yaml ./openapi3.yaml",
    "postbundleOpenApi": "rimraf Schema"
  },
  "directories": {
    "test": "tests"
  },
  "author": "MapColonies",
  "license": "ISC",
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@godaddy/terminus": "^4.10.2",
    "@map-colonies/error-express-handler": "^2.1.0",
    "@map-colonies/express-access-log-middleware": "^1.0.0",
    "@map-colonies/js-logger": "^0.0.4",
    "@map-colonies/mc-model-types": "^13.0.1",
    "@map-colonies/openapi-express-viewer": "^2.0.1",
    "@map-colonies/read-pkg": "^0.0.1",
    "@map-colonies/standard-version-update-helm-version": "^2.0.1",
    "@map-colonies/storage-explorer-middleware": "^1.2.5",
    "@map-colonies/telemetry": "^3.1.0",
    "@opentelemetry/api": "^1.0.1",
    "@opentelemetry/api-metrics": "^0.23.0",
    "@opentelemetry/instrumentation-express": "^0.23.0",
    "@opentelemetry/instrumentation-http": "^0.23.0",
    "@types/geojson": "^7946.0.8",
    "axios": "^0.27.2",
    "config": "^3.3.7",
    "cors": "^2.8.5",
    "express": "^4.18.1",
    "express-openapi-validator": "^4.13.7",
    "http-status-codes": "^2.2.0",
    "husky": "^8.0.1",
    "js-yaml": "^4.1.0",
    "randexp": "^0.5.3",
    "reflect-metadata": "^0.1.13",
    "swagger-ui-express": "^4.4.0",
    "tsyringe": "^4.6.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.0",
    "@commitlint/config-conventional": "^17.0.0",
    "@map-colonies/eslint-config": "^3.1.1",
    "@map-colonies/prettier-config": "0.0.1",
    "@ngneat/falso": "^5.3.0",
    "@redocly/openapi-cli": "^1.0.0-beta.94",
    "@types/axios": "^0.14.0",
    "@types/config": "0.0.41",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.5.1",
    "@types/js-yaml": "^4.0.5",
    "@types/multer": "^1.4.7",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/uuid": "^8.3.4",
    "@types/yamljs": "^0.2.31",
    "commitlint": "^17.0.0",
    "copyfiles": "^2.4.1",
    "cz-conventional-changelog": "^3.0.1",
    "eslint": "^8.15.0",
    "jest": "^28.1.0",
    "jest-create-mock-instance": "^2.0.0",
    "jest-html-reporters": "^3.0.7",
    "jest-mock-axios": "^4.6.1",
    "nodemon": "^2.0.19",
    "prettier": "^2.6.2",
    "pretty-quick": "^3.1.3",
    "rimraf": "^3.0.2",
    "standard-version": "^9.5.0",
    "supertest": "^6.2.3",
    "ts-jest": "^28.0.2",
    "ts-node": "^10.8.0",
    "typescript": "^4.6.4"
  }
}
